generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int     @id @default(autoincrement())
  username          String  @unique
  hashedPassword    String
  slackUserId       String?
  tokens            Token[]
  movies            MoviesOnUsers[]
}

enum TokenType {
  AUTH
}

model Token {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  type        TokenType   @default(AUTH)
}

model Movie {
  id          Int         @id
  createdAt   DateTime    @default(now())
  title       String
  posterPath  String?
  users       MoviesOnUsers[]
}

enum MovieListType {
  FAVORITE
  HM
  UNUSED
}

model MoviesOnUsers {
  movie     Movie           @relation(fields: [movieId], references: [id])
  movieId   Int
  user      User            @relation(fields: [userId], references: [id])
  userId    Int
  type      MovieListType

  @@id([movieId, userId])
}